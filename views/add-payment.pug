extends layout

block content
    .flex.justify-center.items-center.h-screen
        .bg-gray-700.p-6.rounded-lg.shadow-lg
            form(method='post', action='/add-payment/' + riderId)
                .mb-4
                    label(for='date').block.text-sm.font-bold.mb-2.text-gray-300 Payment Date
                    input#date(type='date', name='date', required, class="mt-1 block w-full bg-gray-600 border border-gray-500 rounded-lg shadow-sm py-2 px-3 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", value=new Date().toISOString().split('T')[0])
                .mb-4
                    label(for='amount').block.text-sm.font-bold.mb-2.text-gray-300 Amount
                    input#amount(type='number', name='amount', min='0', step='0.01', required, class="mt-1 block w-full bg-gray-600 border border-gray-500 rounded-lg shadow-sm py-2 px-3 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500")
                .flex.items-center.justify-between
                    button(type='submit', class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500") Add Payment
                    a(href='/rider/' + riderId + '/payments', class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded-lg transition-colors") Back
