extends layout

block content
  .container.mx-auto.px-4.py-8
    .max-w-2xl.mx-auto
      h1.text-3xl.font-bold.text-white.mb-8 Edit Trip

      form(action=`/trip/${trip.id}/edit` method="POST" class="space-y-6")
        .form-group
          label(for="name" class="block text-sm font-medium text-gray-300") Trip Name
          input(
            type="text"
            name="name"
            id="name"
            value=trip.name
            required
            class="mt-1 block w-full bg-gray-700 border border-gray-600 rounded-lg shadow-sm py-2 px-3 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          )

        .form-group
          label(for="start_date" class="block text-sm font-medium text-gray-300") Start Date
          input(
            type="date"
            name="start_date"
            id="start_date"
            value=trip.start_date
            required
            class="mt-1 block w-full bg-gray-700 border border-gray-600 rounded-lg shadow-sm py-2 px-3 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          )

        .form-group
          label(for="end_date" class="block text-sm font-medium text-gray-300") End Date
          input(
            type="date"
            name="end_date"
            id="end_date"
            value=trip.end_date
            required
            class="mt-1 block w-full bg-gray-700 border border-gray-600 rounded-lg shadow-sm py-2 px-3 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          )

        .form-group
          label(for="cost_of_rental" class="block text-sm font-medium text-gray-300") Total Cost of Rental
          input(
            type="number"
            name="cost_of_rental"
            id="cost_of_rental"
            value=trip.cost_of_rental
            required
            min="0"
            step="0.01"
            class="mt-1 block w-full bg-gray-700 border border-gray-600 rounded-lg shadow-sm py-2 px-3 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          )

        .form-group
          label(for="cost_per_seat" class="block text-sm font-medium text-gray-300") Cost per Seat
          input(
            type="number"
            name="cost_per_seat"
            id="cost_per_seat"
            value=trip.cost_per_seat
            required
            min="0"
            step="0.01"
            class="mt-1 block w-full bg-gray-700 border border-gray-600 rounded-lg shadow-sm py-2 px-3 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          )

        .form-group
          label(for="total_seats" class="block text-sm font-medium text-gray-300") Total Seats
          input(
            type="number"
            name="total_seats"
            id="total_seats"
            value=trip.total_seats
            required
            min="1"
            class="mt-1 block w-full bg-gray-700 border border-gray-600 rounded-lg shadow-sm py-2 px-3 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          )

        .flex.justify-end.space-x-4.mt-8
          a(href="/trips" class="px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors") Cancel
          button(type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors") Update Trip 