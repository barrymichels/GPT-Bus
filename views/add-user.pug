extends layout

block content
    .flex.justify-center.items-center.h-screen
        .bg-gray-700.p-6.rounded-lg.shadow-lg
            form(method='post', action='/add-user')
                .mb-4
                    label(for='username').block.text-sm.font-bold.mb-2 Username
                    input#username(type='text', name='username', class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline")
                .mb-4
                    label(for='password').block.text-sm.font-bold.mb-2 Password
                    input#password(type='password', name='password', class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline")
                .flex.items-center.justify-between
                    button(type='submit', class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline") Add User
                    a(href='/dashboard', class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline") Cancel
