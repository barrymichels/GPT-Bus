extends layout

block content
  .container.mx-auto.px-4.py-8
    .max-w-2xl.mx-auto
      h1.text-3xl.font-bold.text-white.mb-8= formTitle || 'Add New Rider'

      if error
        .bg-red-600.text-white.p-4.rounded-lg.shadow-lg.mb-8
          .flex.items-center
            i.fas.fa-exclamation-triangle.mr-2
            | #{error}
            if showTripLink
              a(href="/trips" class="ml-2 underline") Select a trip

      if activeTrip
        form(action="/add-rider" method="POST" class="space-y-6")
          .form-group
            label(for="name" class="block text-sm font-medium text-gray-300") Name
            input(
              type="text"
              name="name"
              id="name"
              required
              class="mt-1 block w-full bg-gray-700 border border-gray-600 rounded-lg shadow-sm py-2 px-3 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            )

          .form-group
            label(for="congregation" class="block text-sm font-medium text-gray-300") Congregation
            input(
              type="text"
              name="congregation"
              id="congregation"
              class="mt-1 block w-full bg-gray-700 border border-gray-600 rounded-lg shadow-sm py-2 px-3 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            )

          .form-group
            label(for="email" class="block text-sm font-medium text-gray-300") Email
            input(
              type="email"
              name="email"
              id="email"
              required
              class="mt-1 block w-full bg-gray-700 border border-gray-600 rounded-lg shadow-sm py-2 px-3 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            )

          .form-group
            label(for="phone" class="block text-sm font-medium text-gray-300") Phone
            input(
              type="tel"
              name="phone"
              id="phone"
              class="mt-1 block w-full bg-gray-700 border border-gray-600 rounded-lg shadow-sm py-2 px-3 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            )

          .form-group
            label(for="street" class="block text-sm font-medium text-gray-300") Street Address
            input(
              type="text"
              name="street"
              id="street"
              class="mt-1 block w-full bg-gray-700 border border-gray-600 rounded-lg shadow-sm py-2 px-3 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            )

          .form-group
            label(for="city" class="block text-sm font-medium text-gray-300") City
            input(
              type="text"
              name="city"
              id="city"
              class="mt-1 block w-full bg-gray-700 border border-gray-600 rounded-lg shadow-sm py-2 px-3 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            )

          .form-group
            label(for="state" class="block text-sm font-medium text-gray-300") State
            input(
              type="text"
              name="state"
              id="state"
              class="mt-1 block w-full bg-gray-700 border border-gray-600 rounded-lg shadow-sm py-2 px-3 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            )

          .form-group
            label(for="zip" class="block text-sm font-medium text-gray-300") ZIP Code
            input(
              type="text"
              name="zip"
              id="zip"
              class="mt-1 block w-full bg-gray-700 border border-gray-600 rounded-lg shadow-sm py-2 px-3 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            )

          .flex.justify-end.space-x-4.mt-8
            a(href="/dashboard" class="px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors") Cancel
            button(type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors") Add Rider
