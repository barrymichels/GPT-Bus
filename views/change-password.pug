extends layout

block content
    .flex.justify-center.items-center.h-screen
        .bg-gray-700.p-6.rounded-lg.shadow-lg
            form(method='post', action='/change-password')
                .mb-4
                    label(for='newPassword', class="block text-sm font-bold mb-2") New Password
                    input#newPassword(type='password', name='newPassword', class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline")
                .flex.items-center.justify-between
                    button(class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline", type='submit') Change Password
