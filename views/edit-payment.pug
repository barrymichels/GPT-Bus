extends layout

block content
    .container.mx-auto.px-4.py-8
        .max-w-md.mx-auto
            h1.text-2xl.font-bold.text-white.mb-8 Edit Payment
            .bg-gray-700.p-6.rounded-lg.shadow-lg
                form(method='post', action='/edit-payment/' + payment.id)
                    .mb-4
                        label(for='date').block.text-sm.font-bold.mb-2.text-gray-300 Payment Date
                        input#date(type='date', name='date', value=payment.date, required, class="mt-1 block w-full bg-gray-600 border border-gray-500 rounded-lg shadow-sm py-2 px-3 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500")
                    .mb-4
                        label(for='amount').block.text-sm.font-bold.mb-2.text-gray-300 Amount
                        input#amount(type='number', name='amount', min='0', step='0.01', value=payment.amount, required, class="mt-1 block w-full bg-gray-600 border border-gray-500 rounded-lg shadow-sm py-2 px-3 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500")
                    .flex.items-center.justify-between
                        button(type='submit', class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500") Update Payment
                        a(href='/rider/' + riderId + '/payments', class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded-lg transition-colors") Back
